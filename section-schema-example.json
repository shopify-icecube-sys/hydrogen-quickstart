{
  "name": "Blog Posts with Tag Filter",
  "tag": "section",
  "class": "blog-section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Latest News"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog",
      "default": "news"
    },
    {
      "type": "text",
      "id": "tag_filter",
      "label": "Tag Filter",
      "info": "Enter the tag name to filter blog posts (e.g., recent-news, featured, latest)",
      "placeholder": "recent-news"
    },
    {
      "type": "range",
      "id": "post_limit",
      "label": "Number of Posts",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show Excerpt",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "blog_post",
      "name": "Blog Post",
      "settings": [
        {
          "type": "text",
          "id": "tag_filter",
          "label": "Tag Filter for this block",
          "info": "Override section tag filter for this specific block"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Filtered Blog Posts",
      "blocks": [
        {
          "type": "blog_post"
        }
      ]
    }
  ]
}